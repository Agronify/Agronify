<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.Agronify" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/agronify_main</item>
        <item name="colorSurface">@color/agronify_main</item>

        <item name="bottomAppBarStyle">@style/Widget.App.BottomAppBar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.App.Button.Outlined</item>
        <item name="borderlessButtonStyle">@style/Widget.App.Button.Borderless</item>
        <item name="textInputOutlinedStyle">@style/Widget.App.TextInputOutlinedLayout</item>
        <item name="materialCardViewFilledStyle">@style/Widget.App.CardView</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="TextAppearance.App.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.App.FormHint" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#80000000</item>
    </style>

    <style name="TextAppearance.App.FormInput" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/nunito_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/agronify_black</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="Widget.App.BottomAppBar" parent="Widget.Material3.BottomAppBar">
        <item name="addElevationShadow">true</item>
        <item name="elevation">3dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="fabAlignmentMode">center</item>
        <item name="fabAnchorMode">cradle</item>
        <item name="fabCradleRoundedCornerRadius">30dp</item>
        <item name="fabCradleMargin">8dp</item>
        <item name="fabCradleVerticalOffset">4dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemRippleColor">@color/agronify_white</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.App.TitleSmall</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.App.TitleSmall</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@android:color/transparent</item>
        <item name="colorOnSecondaryContainer">@color/agronify_main</item>
        <item name="colorOnSurface">@color/agronify_main</item>
        <item name="colorOnSurfaceVariant">@color/agronify_gray</item>
    </style>

    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearanceOverlay">@style/ThemeOverlay.App.ShapeAppearanceOverlay</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.FloatingActionButton</item>
    </style>

    <style name="ThemeOverlay.App.ShapeAppearanceOverlay" parent="ShapeAppearanceOverlay.Material3.FloatingActionButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
        <item name="colorContainer">@color/agronify_main</item>
        <item name="colorOnContainer">@color/agronify_white</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="rippleColor">@android:color/transparent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="rippleColor">@color/agronify_white</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Button.Outlined</item>
    </style>

    <style name="Widget.App.Button.Borderless" parent="Widget.Material3.Button.TextButton">
        <item name="rippleColor">@color/agronify_white</item>
    </style>

    <style name="ThemeOverlay.App.Button" parent="">
        <item name="colorContainer">@color/agronify_main</item>
        <item name="colorOnContainer">@color/agronify_main</item>
    </style>

    <style name="ThemeOverlay.App.Button.Outlined" parent="">
        <item name="colorContainer">@android:color/transparent</item>
        <item name="colorOnSurface">@color/agronify_main</item>
        <item name="colorOutline">@color/agronify_main</item>
    </style>

    <style name="Widget.App.TextInputOutlinedLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">#80000000</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputOutlinedLayout</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ThemeOverlay.App.TextInputOutlinedLayout" parent="">
        <item name="colorPrimary">@color/agronify_main</item>
        <item name="colorOutline">#80000000</item>
        <item name="colorOnSurfaceVariant">#80000000</item>
        <item name="colorControlActivated">@color/agronify_main</item>
        <item name="colorError">@color/agronify_error</item>
        <item name="editTextStyle">@style/Widget.Material3.TextInputEditText.OutlinedBox</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.CardView</item>
    </style>

    <style name="ThemeOverlay.App.CardView" parent="">
        <item name="colorOnSurface">@color/agronify_black</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="ModalBottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/agronify_white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>
</resources>