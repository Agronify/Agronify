<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewFilledStyle"
        app:cardUseCompatPadding="true"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/agronify_white">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_edu_image"
                android:layout_width="112dp"
                android:layout_height="112dp"
                style="?attr/materialCardViewFilledStyle"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_edu_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_edu_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginHorizontal="8dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/agronify_black"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_edu_image"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Singkong: Tanaman Pangan Utama dengan Keunikan Budidaya yang Mudah" />

            <TextView
                android:id="@+id/tv_edu_tag_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/agronify_white"
                android:textSize="10sp"
                android:background="@drawable/shape_tag"
                app:layout_constraintStart_toEndOf="@id/cv_edu_image"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_edu_tag_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/agronify_white"
                android:textSize="10sp"
                android:background="@drawable/shape_tag"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintStart_toEndOf="@id/tv_edu_tag_1"
                app:layout_constraintTop_toTopOf="@id/tv_edu_tag_1"
                app:layout_constraintBottom_toBottomOf="@id/tv_edu_tag_1" />

            <TextView
                android:id="@+id/tv_edu_tag_more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:paddingVertical="3dp"
                android:paddingHorizontal="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/agronify_white"
                android:textSize="10sp"
                android:background="@drawable/shape_tag"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintStart_toEndOf="@id/tv_edu_tag_2"
                app:layout_constraintTop_toTopOf="@id/tv_edu_tag_2"
                app:layout_constraintBottom_toBottomOf="@id/tv_edu_tag_2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>