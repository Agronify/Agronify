<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?attr/materialCardViewFilledStyle"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/agronify_white">

            <ImageView
                android:id="@+id/iv_edu_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_edu_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:textColor="@color/agronify_black"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_edu_image"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_edu_tag_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/agronify_white"
                android:textSize="10sp"
                android:background="@drawable/shape_tag"
                app:layout_constraintStart_toEndOf="@id/iv_edu_image"
                app:layout_constraintTop_toBottomOf="@id/tv_edu_title" />

            <TextView
                android:id="@+id/tv_edu_tag_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="3dp"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/nunito_sans_semi_bold"
                android:textColor="@color/agronify_white"
                android:textSize="10sp"
                android:background="@drawable/shape_tag"
                app:layout_constraintStart_toEndOf="@id/tv_edu_tag_1"
                app:layout_constraintTop_toBottomOf="@id/tv_edu_title" />

            <TextView
                android:id="@+id/tv_edu_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/nunito_sans"
                android:textColor="@color/agronify_black"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="2"
                app:layout_constraintStart_toEndOf="@id/iv_edu_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_edu_tag_1"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>